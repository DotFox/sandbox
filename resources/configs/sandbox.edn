{:nomad/snippets
 {:databases
  {:dev {:config "resources/datomic/dev-transactor-template.properties"
         :db-uri "datomic:dev://localhost:4334/my-db"}
   :prod {:config "resources/datomic/cassandra-transactor-template.properties"
          :db-uri "datomic:cass://localhost:4334/my-db"}}}
 
 :nomad/environments
 {"dev"
  {:server {:port 3000
            :thread 4
            :worker-name-prefix "dev-sandbox"}}
  "prod"
  {:server {:port 3001
            :thread 16
            :worker-name-prefix "prod-sandbox"}}}
 
 :nomad/hosts
 {"Kirills-MacBook-Air.local"
  {:database #nomad/snippet [:databases :dev]}
  "Remote-server"
  {:database #nomad/snippet [:databases :prod]}}}









